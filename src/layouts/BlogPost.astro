---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props extends CollectionEntry<'blog'>['data'] {
	tags?: string[];
	prevPost?: { title: string; slug: string; thumbnail?: string } | null;
	nextPost?: { title: string; slug: string; thumbnail?: string } | null;
}

const { title, description, pubDate, updatedDate, heroImage, thumbnail, tags = [], prevPost, nextPost } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				background: #f7f7f7;
			}

			.site-frame {
				max-width: 1100px;
				margin: 25px auto;
				background: white;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
				overflow: hidden;
			}

			.page-layout {
				display: flex;
				align-items: flex-start;
				gap: 2rem;
				padding: 2rem 1.5rem;
			}

			.main-content {
				flex: 1;
				min-width: 0;
			}

			@media (max-width: 900px) {
				.site-frame {
					margin: 25px;
				}

				.page-layout {
					flex-direction: column;
				}
			}
		</style>
	</head>

	<body>
		<div class="site-frame">
			<Header />
			<div class="page-layout">
				<main class="main-content">
				<article class="blog-post">
					<header class="post-header">
						<h1 class="post-title">{title}</h1>
						<div class="post-meta">
							<span class="meta-icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" width="12" height="12">
									<path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm0 14.5a6.5 6.5 0 1 1 0-13 6.5 6.5 0 0 1 0 13zM8.5 4h-1v4.5l3.5 2 .5-.87-3-1.73V4z"/>
								</svg>
							</span>
							<FormattedDate date={pubDate} />
							<span class="meta-icon user-icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" width="12" height="12">
									<path d="M8 8a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm0 1c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
								</svg>
							</span>
							<a href="/about" class="post-author">Travis</a>
						</div>
					</header>

					{thumbnail && (
						<div class="hero-image">
							<img src={thumbnail} alt={title} />
						</div>
					)}

					<div class="post-content prose">
						<slot />
					</div>

					{tags && tags.filter(t => t.toLowerCase() !== 'uncategorized').length > 0 && (
						<div class="post-tags">
							<span class="tags-icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" width="14" height="14">
									<path d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
								</svg>
							</span>
							{tags.filter(t => t.toLowerCase() !== 'uncategorized').map((tag) => (
								<a href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag-link">{tag.toUpperCase()}</a>
							))}
						</div>
					)}

					<nav class="post-navigation">
						<div class="nav-slot nav-prev-slot">
							{prevPost && (
								<a href={`/blog/${prevPost.slug}/`} class="nav-item nav-prev">
									{prevPost.thumbnail && (
										<div class="nav-thumbnail">
											<img src={prevPost.thumbnail} alt={prevPost.title} />
										</div>
									)}
									<div class="nav-text">
										<span class="nav-label">« PREVIOUS</span>
										<span class="nav-title">{prevPost.title}</span>
									</div>
								</a>
							)}
						</div>
						<div class="nav-slot nav-next-slot">
							{nextPost && (
								<a href={`/blog/${nextPost.slug}/`} class="nav-item nav-next">
									<div class="nav-text">
										<span class="nav-label">NEXT »</span>
										<span class="nav-title">{nextPost.title}</span>
									</div>
									{nextPost.thumbnail && (
										<div class="nav-thumbnail">
											<img src={nextPost.thumbnail} alt={nextPost.title} />
										</div>
									)}
								</a>
							)}
						</div>
					</nav>
				</article>
			</main>
				<Sidebar />
			</div>
			<Footer />
		</div>
	</body>
</html>

<style>
	.blog-post {
		max-width: 100%;
	}

	.post-header {
		margin-bottom: 1rem;
	}

	.post-title {
		margin: 0 0 0.5rem 0;
		font-size: 1.5rem;
		font-weight: 700;
		color: #333;
	}

	.post-meta {
		font-size: 0.85rem;
		color: #999;
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.meta-icon {
		display: inline-flex;
		align-items: center;
		color: #999;
	}

	.meta-icon svg {
		display: block;
	}

	.user-icon {
		margin-left: 0.5rem;
	}

	.post-author {
		color: #999;
		text-decoration: none;
	}

	.post-author:hover {
		color: #e64946;
		text-decoration: none;
	}

	.post-author:hover {
		text-decoration: underline;
	}

	.hero-image {
		margin-bottom: 1.25rem;
		width: 100%;
		overflow: hidden;
	}

	.hero-image img {
		width: 100%;
		height: auto;
		display: block;
		object-fit: cover;
		max-height: 400px;
	}

	.post-content {
		line-height: 1.7;
		color: #333;
	}

	.post-content :global(p) {
		margin-bottom: 1.25em;
	}

	.post-content :global(h2) {
		margin-top: 2em;
		margin-bottom: 0.75em;
		font-size: 1.35rem;
	}

	.post-content :global(h3) {
		margin-top: 1.5em;
		margin-bottom: 0.5em;
		font-size: 1.15rem;
	}

	.post-content :global(a) {
		color: #e64946;
	}

	.post-content :global(a:hover) {
		text-decoration: underline;
	}

	.post-content :global(img) {
		max-width: 100%;
		height: auto;
		margin: 1em 0;
	}

	.post-content :global(blockquote) {
		border-left: 4px solid #e64946;
		padding-left: 1rem;
		margin: 1.5em 0;
		font-style: italic;
		color: #666;
	}

	.post-content :global(ul),
	.post-content :global(ol) {
		margin-bottom: 1.25em;
		padding-left: 1.5em;
	}

	.post-content :global(li) {
		margin-bottom: 0.5em;
	}

	/* Tags */
	.post-tags {
		margin-top: 2rem;
		padding-top: 1rem;
		border-top: 1px solid #e5e5e5;
		display: flex;
		align-items: stretch;
		flex-wrap: wrap;
		gap: 6px;
	}

	.tags-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.25rem;
		background: #e64946;
		color: white;
		font-size: 1rem;
	}

	.tag-link {
		display: inline-flex;
		align-items: center;
		background: #2a2a2a;
		color: white;
		padding: 0.5rem 0.75rem;
		text-decoration: none;
		font-size: 0.75rem;
		font-weight: 700;
		letter-spacing: 0.5px;
	}

	.tag-link:hover {
		background: #e64946;
		color: white;
		text-decoration: none;
	}

	/* Post Navigation */
	.post-navigation {
		margin-top: 2rem;
		padding-top: 1rem;
		border-top: 1px solid #e5e5e5;
		display: flex;
		justify-content: space-between;
		gap: 1rem;
	}

	.nav-slot {
		flex: 1;
	}

	.nav-next-slot {
		display: flex;
		justify-content: flex-end;
	}

	.nav-item {
		display: flex;
		align-items: flex-start;
		gap: 0.75rem;
		text-decoration: none;
	}

	.nav-prev {
		flex-direction: row;
	}

	.nav-next {
		flex-direction: row;
	}

	.nav-thumbnail {
		flex-shrink: 0;
		width: 80px;
		height: 60px;
		overflow: hidden;
	}

	.nav-thumbnail img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.nav-text {
		min-width: 0;
	}

	.nav-prev .nav-text {
		text-align: left;
	}

	.nav-next .nav-text {
		text-align: right;
	}

	.nav-label {
		display: block;
		font-size: 0.85rem;
		font-weight: 700;
		color: #333;
		margin-bottom: 0.25rem;
	}

	.nav-item:hover .nav-label {
		color: #e64946;
	}

	.nav-title {
		display: block;
		color: #333;
		font-size: 0.85rem;
		line-height: 1.3;
	}

	.nav-item:hover .nav-title {
		color: #e64946;
	}

	@media (max-width: 768px) {
		.post-title {
			font-size: 1.25rem;
		}

		.post-navigation {
			flex-direction: column;
		}

		.nav-next-slot {
			justify-content: flex-start;
		}

		.nav-next {
			flex-direction: row;
		}

		.nav-next .nav-text {
			text-align: left;
		}
	}
</style>
