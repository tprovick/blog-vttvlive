---
import { SITE_TAGLINE } from '../consts';

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
const isAbout = currentPath === '/about' || currentPath === '/about/';
---

<header class="site-header">
	<div class="header-main">
		<div class="header-content">
			<h1 class="site-title"><a href="/">VTTV LIVE</a></h1>
			<div class="title-line"></div>
			<p class="tagline">{SITE_TAGLINE}</p>
		</div>
	</div>
	<nav class="main-nav">
		<div class="nav-content">
			<a href="/" class:list={["nav-button", { active: isHome }]}>HOME</a>
			<span class="nav-divider"></span>
			<a href="/about" class:list={["nav-button", { active: isAbout }]}>ABOUT</a>
		</div>
		<div class="nav-line"></div>
	</nav>
</header>

<style>
	.site-header {
		width: 100%;
	}

	/* Main header area - white background */
	.header-main {
		background: white;
		padding: 1.5rem 1.5rem 1rem;
	}

	.header-content {
		max-width: 1100px;
		margin: 0 auto;
	}

	.site-title {
		margin: 0;
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
	}

	.site-title a {
		color: #333;
		text-decoration: none;
	}

	.site-title a:hover {
		color: #333;
		text-decoration: none;
	}

	.title-line {
		width: 100%;
		height: 2px;
		background: #e64946;
		margin: 0.75rem 0 0.35rem 0;
	}

	.tagline {
		margin: 0;
		font-size: 0.85rem;
		color: #e64946;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		font-weight: 700;
	}

	/* Navigation - dark grey bar */
	.main-nav {
		background: #2a2a2a;
	}

	.nav-content {
		display: flex;
	}

	.nav-button {
		display: inline-block;
		padding: 0.75rem 1.25rem;
		background: transparent;
		color: white;
		text-decoration: none;
		font-size: 0.8rem;
		font-weight: 700;
		letter-spacing: 0.5px;
		text-transform: uppercase;
	}

	.nav-button:first-of-type {
		padding-left: 1.5rem;
	}

	.nav-button:hover {
		background: #e64946;
		color: white;
		text-decoration: none;
	}

	.nav-button.active {
		background: #e64946;
		color: white;
	}

	.nav-divider {
		width: 1px;
		background: #555;
		align-self: stretch;
	}

	.nav-line {
		width: 100%;
		height: 3px;
		background: #e64946;
	}

	@media (max-width: 768px) {
		.site-title {
			font-size: 1.5rem;
		}

		.tagline {
			font-size: 0.75rem;
		}

		.header-main {
			padding: 1rem;
		}

		.nav-button {
			padding: 0.6rem 1rem;
			font-size: 0.75rem;
		}

		.nav-button:first-of-type {
			padding-left: 1rem;
		}
	}
</style>
